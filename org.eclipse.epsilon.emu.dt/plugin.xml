<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.eclipse.epsilon.emu.dt.editor.EmuEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="emu"
            icon="icons/epl.gif"
            id="org.eclipse.epsilon.emu.dt.editor.EmuEditor"
            name="Epsilon Mutation Language Editor"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.epsilon.emu.eclipse.dt.launching.EmuLaunchConfigurationDelegate"
            icon="icons/epl.gif"
            id="EMUTransformation"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="org.eclipse.epsilon.emu.dt.launching.EmuLaunchConfigurationDelegate"
            id="org.epsilon.emu.eclipse.dt.launching.EmuLaunchConfigurationDelegate"
            modes="run, debug"
            name="EMU Program"/>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.eclipse.epsilon.emu.dt.launching.EmuLaunchConfigurationTabGroup"
            description="Create a configuration to launch an EMU Program"
            id="org.eclipse.epsilon.emu.dt.launching.EmuLaunchConfigurationTabGroup"
            type="org.epsilon.emu.eclipse.dt.launching.EmuLaunchConfigurationDelegate"/>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            category="org.eclipse.epsilon.dt"
            class="org.eclipse.epsilon.emu.dt.wizards.NewEmuFileWizard"
            icon="icons/epl.gif"
            id="org.eclipse.epsilon.emu.dt.wizards.NewEmuFileWizard"
            name="EMU Program"/>
   </extension>

</plugin>
