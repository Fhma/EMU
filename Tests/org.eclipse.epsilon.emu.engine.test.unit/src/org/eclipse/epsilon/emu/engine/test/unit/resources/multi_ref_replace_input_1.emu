@action replace
@feature places
pattern mutation_1
instance:PetriNet
guard: PlaceToTransArc.all.select(a|a.source.fill_colour = "blue").first().isDefined()
{
	do {
		var place = Place.all.select(a|a.fill_colour = "blue").first();
		var newPlace = Place.createInstance();
		newPlace.copyOver(place);
		for(a in Arc.all)
		{
			if(a.isTypeOf(PlaceToTransArc))
			{
				if(a.source = place)
				{
					a.source = newPlace;
				}
			}
			if (a.isTypeOf(TransToPlaceArc))
			{
					if(a.target = place)
						a.target = newPlace;
			}
		}
		instance.places.remove(place);
		instance.places.add(newPlace);
	}
	
}

operation Place copyOver(target:Place)
{
	self.name = "new place";
	self.radius = 3 + target.radius;
	self.fill_colour = "black";
	self.coordinates = target.coordinates;
}
